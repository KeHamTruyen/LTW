Options -Indexes
<IfModule mod_rewrite.c>
RewriteEngine On # Adjust RewriteBase to your local path if BE/public is not the vhost root # Example for XAMPP default under /LTW/BE/public/ # RewriteBase /LTW/BE/public/

    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    RewriteRule ^ index.php [L,QSA]

</IfModule>
